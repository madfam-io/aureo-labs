# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_ENV=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/aureo_labs
REDIS_URL=redis://localhost:6379

# CMS (Sanity)
SANITY_PROJECT_ID=your_project_id
SANITY_DATASET=production
SANITY_READ_TOKEN=your_read_token
SANITY_WEBHOOK_SECRET=your_webhook_secret

# Search (Algolia)
ALGOLIA_APP_ID=your_app_id
ALGOLIA_SEARCH_KEY=your_search_key
ALGOLIA_ADMIN_KEY=your_admin_key
ALGOLIA_INDEX_NAME=aureo_labs

# Analytics & Monitoring
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
SENTRY_DSN=your_sentry_dsn
SENTRY_AUTH_TOKEN=your_auth_token
LOGROCKET_APP_ID=your_logrocket_id

# Payments (Stripe - if applicable)
STRIPE_PUBLIC_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Email Service
RESEND_API_KEY=your_resend_key
EMAIL_FROM=hello@aureolabs.dev

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_CHAT=true
